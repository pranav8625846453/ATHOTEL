<% layout("/layouts/boilerplate") %>

<style>

  /* Filters Section */
  .filters-section {
    background: #f8f9fa;
    border-radius: 20px;
    padding: 2rem 0;
    margin: 2rem 0;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
    position: relative;
  }

  .filters-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .filter {
    text-align: center;
    padding: 0.75rem 1rem;
    border-radius: 12px;
    background: white;
    border: 2px solid #e9ecef;
    transition: all 0.3s ease;
    min-width: 80px;
    max-width: 120px;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    flex-shrink: 0;
  }

  .filter:hover {
    background: #f8f9fa;
    border-color: #007bff;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(0,123,255,0.15);
  }

  .filter.active {
    background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    color: white;
    border-color: #007bff;
    box-shadow: 0 4px 15px rgba(0,123,255,0.3);
  }

  .filter i {
    font-size: 1.2rem;
    margin-bottom: 0.25rem;
    display: block;
  }

  .filter p {
    font-size: 0.7rem;
    margin: 0;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    line-height: 1.2;
  }

  /* Horizontal scrolling container */
  .filters-scroll-container {
    overflow-x: auto;
    overflow-y: hidden;
    scrollbar-width: thin;
    scrollbar-color: #dee2e6 transparent;
    -webkit-overflow-scrolling: touch;
  }

  .filters-scroll-container::-webkit-scrollbar {
    height: 6px;
  }

  .filters-scroll-container::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 3px;
  }

  .filters-scroll-container::-webkit-scrollbar-thumb {
    background: #dee2e6;
    border-radius: 3px;
  }

  .filters-scroll-container::-webkit-scrollbar-thumb:hover {
    background: #adb5bd;
  }

  .tax-info {
    display: block !important;
    opacity: 1 !important;
    transform: none !important;
  }


  /* Enhanced Listings Grid */
  .listing-card {
    border: none;
    border-radius: 20px;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    box-shadow: 0 8px 32px rgba(0,0,0,0.12);
    background: white;
    position: relative;
  }

  .listing-card:hover {
    transform: translateY(-12px) scale(1.02);
    box-shadow: 0 20px 60px rgba(0,0,0,0.2);
  }

  .listing-card .card-img-top {
    transition: transform 0.6s cubic-bezier(0.175, 0.885, 0.32, 1.275);
  }

  .listing-card:hover .card-img-top {
    transform: scale(1.1);
  }

  /* Hover Overlay */
  .card-hover-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.5) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.4s ease;
    z-index: 2;
  }

  .listing-card:hover .card-hover-overlay {
    opacity: 1;
  }

  .hover-content {
    text-align: center;
    transform: translateY(20px);
    transition: transform 0.4s ease;
  }

  .listing-card:hover .hover-content {
    transform: translateY(0);
  }

  /* Category and Location Badges */
  .category-badge .badge {
    background: linear-gradient(45deg, #ffc107, #fd7e14) !important;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .location-badge .badge {
    background: rgba(255, 255, 255, 0.9) !important;
    color: #333 !important;
    font-size: 0.7rem;
    font-weight: 500;
    backdrop-filter: blur(10px);
  }

  .listing-card .card-body {
    padding: 1.5rem;
    background: linear-gradient(135deg, #ffffff 0%, #f8f9fa 100%);
  }

  .listing-card .card-title {
    font-size: 1.1rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: #2c3e50;
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .listing-card .card-title a:hover {
    color: #28a745 !important;
  }

  .listing-card .card-text {
    color: #6c757d;
    font-size: 0.9rem;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }

  /* Price Section */
  .price-section {
    flex: 1;
  }

  .price-section .h4 {
    font-size: 1.4rem;
    color: #28a745;
    text-shadow: 0 1px 2px rgba(40, 167, 69, 0.2);
  }



  /* Card Image Overlay Improvements */
  .card-img-overlay {
    background: linear-gradient(45deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.4) 100%);
    transition: all 0.3s ease;
  }

  .listing-card:hover .card-img-overlay {
    background: linear-gradient(45deg, rgba(0,0,0,0.3) 0%, rgba(0,0,0,0.7) 100%);
  }

  /* Card Image Overlay */
  .card-img-container {
    position: relative;
    overflow: hidden;
    border-radius: 20px 20px 0 0;
  }

  .card-img-overlay {
    background: linear-gradient(45deg, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.3) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .listing-card:hover .card-img-overlay {
    opacity: 1;
  }

  .card-img-overlay .badge {
    font-size: 0.75rem;
    font-weight: 500;
  }

  /* Empty State */
  .empty-state {
    padding: 3rem 2rem;
    background: white;
    border-radius: 20px;
    box-shadow: 0 4px 20px rgba(0,0,0,0.08);
  }

  .empty-state i {
    color: #dee2e6;
  }

  .empty-state h3 {
    color: #6c757d;
    font-weight: 400;
  }

  .empty-state .lead {
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Results Summary */
  .border-top {
    border-color: #e9ecef !important;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .filters-container {
      gap: 0.5rem !important;
    }

    .filter {
      min-width: 70px;
      max-width: 100px;
      padding: 0.6rem 0.8rem;
    }

    .filter i {
      font-size: 1.1rem;
    }

    .filter p {
      font-size: 0.65rem;
    }
  }

  @media (max-width: 576px) {
    .filters-container {
      gap: 0.4rem !important;
    }

    .filter {
      min-width: 65px;
      max-width: 90px;
      padding: 0.5rem 0.7rem;
    }

    .filter i {
      font-size: 1rem;
    }

    .filter p {
      font-size: 0.6rem;
    }


    /* Card responsive adjustments */
    .listing-card .card-body {
      padding: 1rem;
    }

    .listing-card .card-title {
      font-size: 1rem;
    }

    .price-section .h4 {
      font-size: 1.2rem;
    }


    .category-badge .badge,
    .location-badge .badge {
      font-size: 0.65rem;
      padding: 0.25rem 0.5rem;
    }

    .hover-content i {
      font-size: 1.5rem;
    }
  }
</style>


<!-- Filters Section -->
<div class="filters-section mb-5 fade-in">
  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="mb-4">
          <div class="filters-scroll-container">
            <div class="filters-container d-flex gap-3 pb-2">
            <div class="filter <%= !category ? 'active' : '' %>" data-category="">
              <div><i class="fa-solid fa-list"></i></div>
              <p>All</p>
            </div>
            <div class="filter <%= category === 'trending' ? 'active' : '' %>" data-category="trending">
              <div><i class="fa-solid fa-fire"></i></div>
              <p>Trending</p>
            </div>
            <div class="filter <%= category === 'rooms' ? 'active' : '' %>" data-category="rooms">
              <div><i class="fa-solid fa-bed"></i></div>
              <p>Rooms</p>
            </div>
            <div class="filter <%= category === 'cities' ? 'active' : '' %>" data-category="cities">
              <div><i class="fa-solid fa-mountain-city"></i></div>
              <p>Cities</p>
            </div>
            <div class="filter <%= category === 'mountains' ? 'active' : '' %>" data-category="mountains">
              <div><i class="fa-solid fa-mountain-sun"></i></div>
              <p>Mountains</p>
            </div>
            <div class="filter <%= category === 'castles' ? 'active' : '' %>" data-category="castles">
              <div><i class="fa-solid fa-chess-rook"></i></div>
              <p>Castles</p>
            </div>
            <div class="filter <%= category === 'pool' ? 'active' : '' %>" data-category="pool">
              <div><i class="fa-solid fa-person-swimming"></i></div>
              <p>Pools</p>
            </div>
            <div class="filter <%= category === 'camping' ? 'active' : '' %>" data-category="camping">
              <div><i class="fa-solid fa-tent"></i></div>
              <p>Camping</p>
            </div>
            <div class="filter <%= category === 'farms' ? 'active' : '' %>" data-category="farms">
              <div><i class="fa-solid fa-tractor"></i></div>
              <p>Farms</p>
            </div>
            <div class="filter <%= category === 'doms' ? 'active' : '' %>" data-category="doms">
              <div><i class="fa-solid fa-igloo"></i></div>
              <p>Doms</p>
            </div>
            <div class="filter <%= category === 'boats' ? 'active' : '' %>" data-category="boats">
              <div><i class="fa-solid fa-ship"></i></div>
              <p>Boats</p>
            </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</div>

<!-- Listings Section -->
<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <% if (allListing.length === 0) { %>
        <div class="text-center py-5">
          <div class="empty-state">
            <i class="fas fa-search fa-4x text-muted mb-4"></i>
            <h3 class="text-muted mb-3">No listings found</h3>
            <p class="lead text-muted mb-4">
              <% if (typeof search !== 'undefined' && search) { %>
                We couldn't find any listings matching "<strong><%= search %></strong>".
                Try adjusting your search terms or browse all available options.
              <% } else if (typeof category !== 'undefined' && category) { %>
                No listings are currently available in the "<strong><%= category %></strong>" category.
                Check out other categories or view all listings.
              <% } else { %>
                There are no listings available at the moment.
                Be the first to add a listing or check back later!
              <% } %>
            </p>
            <div class="d-flex justify-content-center gap-3">
              <a href="/listings" class="btn btn-primary btn-lg">
                <i class="fas fa-list me-2"></i>View All Listings
              </a>
              <% if (currUser) { %>
                <a href="/listings/new" class="btn btn-success btn-lg">
                  <i class="fas fa-plus me-2"></i>Add New Listing
                </a>
              <% } %>
            </div>
          </div>
        </div>
      <% } else { %>
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
          <% for (let listing of allListing) { %>
            <div class="col">
              <div class="card listing-card h-100 border-0 shadow-sm">
                <div class="card-img-container position-relative overflow-hidden">
                  <a href="/listings/<%= listing._id %>" class="text-decoration-none">
                    <img src="<%= listing.image.url %>" class="card-img-top rounded-3 shadow-sm" alt="<%= listing.title %>" style="height: 240px; object-fit: cover; transition: transform 0.3s ease;">
                    <div class="card-img-overlay d-flex align-items-start justify-content-between p-3">
                      <div class="category-badge">
                        <span class="badge bg-warning text-dark rounded-pill px-2 py-1">
                          <i class="fas fa-tag me-1"></i><%= listing.category || 'General' %>
                        </span>
                      </div>
                      <div class="location-badge">
                        <span class="badge bg-light text-dark rounded-pill px-2 py-1">
                          <i class="fas fa-map-marker-alt me-1"></i><%= listing.location %>
                        </span>
                      </div>
                    </div>
                    <div class="card-hover-overlay">
                      <div class="hover-content">
                        <i class="fas fa-eye fa-2x text-white"></i>
                      </div>
                    </div>
                  </a>
                </div>
                <div class="card-body d-flex flex-column p-4">
                  <div class="mb-3">
                    <h5 class="card-title mb-2 fw-bold text-dark">
                      <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark hover-text-primary">
                        <%= listing.title.length > 30 ? listing.title.substring(0, 30) + '...' : listing.title %>
                      </a>
                    </h5>
                    <p class="card-text text-muted small mb-2">
                      <i class="fas fa-globe-americas me-1"></i><%= listing.country %>
                    </p>
                  </div>

                  <div class="mt-auto">
                    <div class="price-section">
                      <div class="d-flex align-items-baseline">
                        <span class="h4 text-primary mb-0 fw-bold">â‚¹<%= listing.price.toLocaleString('en-IN') %></span>
                        <small class="text-muted ms-1">/night</small>
                      </div>
                      <div class="tax-info mt-1">
                        <small class="text-success fw-semibold">
                          <i class="fas fa-plus-circle me-1"></i>+18% GST
                        </small>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% } %>
        </div>

        <!-- Results Summary -->
        <div class="text-center mt-5 pt-4 border-top">
          <p class="text-muted mb-0">
            <i class="fas fa-info-circle me-2"></i>
            Showing <%= allListing.length %> listing<%= allListing.length !== 1 ? 's' : '' %>
            <% if (typeof category !== 'undefined' && category) { %>
              in <strong><%= category %></strong> category
            <% } %>
            <% if (typeof search !== 'undefined' && search) { %>
              for "<strong><%= search %></strong>"
            <% } %>
          </p>
        </div>
      <% } %>
    </div>
  </div>
</div>


<script>
  // Category filtering
  const filters = document.querySelectorAll('.filter[data-category]');
  filters.forEach(filter => {
    filter.addEventListener('click', () => {
      const category = filter.getAttribute('data-category');
      const urlParams = new URLSearchParams(window.location.search);
      if (category) {
        urlParams.set('category', category);
      } else {
        urlParams.delete('category');
      }
      window.location.href = `/listings?${urlParams.toString()}`;
    });
  });
</script>
